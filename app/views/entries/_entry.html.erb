<div class="card" id="<%= dom_id(entry) %>" style="width: 100%; max-width: 400px;">
  <header class="card-header">
    <p class="card-header-title">
      <%= entry.meal_type %>
    </p>
  </header>
  <div class="card-content">
    <div class="content">
      <p>
        <strong>Calories:</strong>
        <span class="has-text-weight-bold"><%= entry.calories %></span> kcal
      </p>
      <p>
        <strong>Proteins:</strong>
        <span class="has-text-weight-bold"><%= entry.proteins %></span> g
      </p>
      <p>
        <strong>Carbohydrates:</strong>
        <span class="has-text-weight-bold"><%= entry.carbohydrates %></span> g
      </p>
      <p>
        <strong>Fats:</strong>
        <span class="has-text-weight-bold"><%= entry.fats %></span> g
      </p>
      <p class="is-italic">
        Logged <%= time_ago_in_words(entry.created_at) %> ago
      </p>
    </div>
  </div>
  <footer class="card-footer">
    <a href="<%= entry_path(entry) %>" class="card-footer-item">Show</a>
    <a href="<%= edit_entry_path(entry) %>" class="card-footer-item">Edit</a>
    <a href="<%= entry_path(entry) %>" data-method="delete" data-confirm="Are you sure?" class="card-footer-item">Destroy</a>
  </footer>
</div>
